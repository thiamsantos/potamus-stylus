radio(options)

  $size = options.size || 25px
  $border-color = options.border-color || #9e9e9e
  $color = options.color || #009688
  $animation-name = options.animation-name || show-up

  $light-grey = #e0e0e0

  appearance none
  border 3px solid $border-color
  border-radius 50%
  box-sizing border-box
  height $size
  margin 0
  outline 0
  padding 0
  position relative
  transition background,transform .28s cubic-bezier(.4,0,.2,1)
  width $size

  &:disabled
    opacity .38
    pointer-events none

  &:checked
    border-color $color

    &:before
      animation $animation-name .28s cubic-bezier(.4,0,.2,1)
      background $color
      border-radius 50%
      content ''
      display block
      height 60%
      left 20%
      position absolute
      top 20%
      width 60%

  @keyframes $animation-name
    from
      transform scale3d(0,0,0)
    to
      transform scale3d(1,1,1)
